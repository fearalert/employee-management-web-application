<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Employee Management</title>
</head>
<body>
    <div class="navbar">
        <a href="/employees/new">Add Employees</a>
    </div>
    
    <div class="container">
       <div class="table-responsive">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% employees.forEach((employee, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= employee.lastName %></td>
                    <td><%= employee.firstName %></td>
                    <td><%= employee.department %></td>
                    <td>
                        <div class="button-row">
                            <a href="/employees/<%= employee._id %>/edit" class="button">Edit</a>
                            <form action="/employees/<%= employee._id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button class="button-red" type="submit">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

    </div>
</body>
</html>
